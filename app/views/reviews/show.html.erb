<div class="page-header">
  <h3>Review #<%= @review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @review.user_id %></dd>

      <dt>Restaurant</dt>
      <dd><%= @review.restaurant_id %></dd>

      <dt>Content</dt>
      <dd><%= @review.content %></dd>

      <dt>Stars</dt>
      <dd><%= @review.stars %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reviews" class="btn btn-primary">
        Back
      </a>
      <a href="/reviews/<%= @review.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Review has many review_photos -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Review_photos
      </li>

      <% @review.review_photos.each do |review_photo| %>
        <li class="list-group-item">
          <a href="/review_photos/<%= review_photo.id %>">
            <%= review_photo.review_id %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Review has many responses -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Responses
      </li>

      <% @review.responses.each do |response| %>
        <li class="list-group-item">
          <a href="/responses/<%= response.id %>">
            <%= response.review_id %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
